{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["ultracite"],
  "files": {
    "ignore": [
      "apps/app/.next/**/*",
      "apps/app/.worker-next/**/*",
      "apps/app/.wrangler/**/*",
      "apps/app/drizzle/**/*",
      "apps/app/env.d.ts",
      "apps/www/.next/**/*",
      "apps/www/.worker-next/**/*",
      "apps/www/.wrangler/**/*",
      "apps/www/drizzle/**/*",
      "apps/www/env.d.ts",
      "apps/redirect/.wrangler/**/*",
      "apps/redirect/drizzle/**/*",
      "apps/redirect/env.d.ts",
      "apps/redirect/worker-configuration.d.ts",
      "packages/email-templates/.react-email/**/*"
    ]
  },
  "linter": {
    "rules": {
      "correctness": {
        "noUnusedImports": {
          "level": "warn",
          "fix": "safe"
        },
        "noNodejsModules": "off"
      },
      "style": {
        "useNamingConvention": "off"
      },
      "suspicious": {
        "noConsoleLog": "off",
        "noArrayIndexKey": "off"
      }
    }
  }
}
