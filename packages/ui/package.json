{
  "name": "@hexa/ui",
  "version": "0.0.0",
  "private": true,
  "sideEffects": false,
  "exports": {
    "./hooks": "./src/hooks/index.tsx",
    "./icons": "./src/icons/index.tsx",
    "./alert-dialog": "./src/ui/alert-dialog.tsx",
    "./alert": "./src/ui/alert.tsx",
    "./avatar": "./src/ui/avatar.tsx",
    "./badge": "./src/ui/badge.tsx",
    "./button": "./src/ui/button.tsx",
    "./card": "./src/ui/card.tsx",
    "./dialog": "./src/ui/dialog.tsx",
    "./drawer": "./src/ui/drawer.tsx",
    "./dropdown-menu": "./src/ui/dropdown-menu.tsx",
    "./form": "./src/ui/form.tsx",
    "./input-otp": "./src/ui/input-otp.tsx",
    "./input": "./src/ui/input.tsx",
    "./label": "./src/ui/label.tsx",
    "./pagination": "./src/ui/pagination.tsx",
    "./skeleton": "./src/ui/skeleton.tsx",
    "./tabs": "./src/ui/tabs.tsx",
    "./textarea": "./src/ui/textarea.tsx",
    "./toast": "./src/ui/toast.tsx",
    "./toaster": "./src/ui/toaster.tsx",
    "./use-toast": "./src/ui/use-toast.tsx",
    "./divider": "./src/divider.tsx",
    "./form-error-message": "./src/form-error-message.tsx",
    "./loading-button": "./src/loading-button.tsx",
    "./password-input": "./src/password-input.tsx",
    "./responsive-dialog": "./src/responsive-dialog.tsx",
    ".": "./src/index.tsx"
  },
  "scripts": {
    "lint": "eslint src/",
    "check-types": "tsc --noEmit",
    "update-ui": "pnpm dlx shadcn-ui@latest add $(ls src/ui/*.tsx | xargs -n1 basename | sed 's/.tsx$//' | tr '\n' ' ')",
    "add": "pnpm dlx shadcn-ui@latest add",
    "postadd": "pnpm run update-exports && pnpm run format",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "update-exports": "node scripts/update-exports.js",
    "dev": "node --watch-path=./src scripts/update-exports.js",
    "build": "node scripts/update-exports.js"
  },
  "devDependencies": {
    "@hexa/eslint-config": "workspace:*",
    "@hexa/tailwind-config": "workspace:*",
    "@hexa/typescript-config": "workspace:*",
    "@turbo/gen": "^1.12.4",
    "@types/eslint": "^8.56.5",
    "@types/lodash": "^4.17.5",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8.57.0",
    "tailwindcss": "^3.4.4",
    "tsup": "^8.1.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@hexa/utils": "workspace:*",
    "@hookform/resolvers": "^3.6.0",
    "@radix-ui/react-alert-dialog": "^1.1.1",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-navigation-menu": "^1.2.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "input-otp": "^1.2.4",
    "lodash": "^4.17.21",
    "lucide-react": "^0.396.0",
    "next": "15.0.0-rc.0",
    "next-themes": "^0.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.0",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^0.9.1",
    "zod": "^3.23.8"
  }
}
