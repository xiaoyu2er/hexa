    "./sidebar-provider": "./src/provider/sidebar-provider.tsx",
    "./theme-provider": "./src/provider/theme-provider.tsx",
    ".": "./src/index.tsx"
  },
  "scripts": {
    "update-ui": "pnpm dlx shadcn-ui@latest add $(ls src/ui/*.tsx | xargs -n1 basename | sed 's/.tsx$//' | tr '\n' ' ')",
    "add": "pnpm dlx shadcn-ui@latest add",
    "postadd": "pnpm run update-exports && pnpm run format",
    "update-exports": "node scripts/update-exports.js",
    "dev": "node --watch-path=./src ./scripts/update-exports.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
