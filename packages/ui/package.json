{
  "name": "@hexa/ui",
  "version": "0.0.0",
  "private": true,
  "sideEffects": false,
  "exports": {
    "./globals.css": "./src/globals.css",
    "./hooks/*": "./src/ui/hooks/*.tsx",
    "./icons": "./src/icons/index.tsx",
    "./font": "./src/font/font.tsx",
    "./animated-beam": "./src/ui/animated-beam.tsx",
    "./badge": "./src/ui/badge.tsx",
    "./card": "./src/ui/card.tsx",
    "./chart": "./src/ui/chart.tsx",
    "./number-ticker": "./src/ui/number-ticker.tsx",
    "./scroll-area": "./src/ui/scroll-area.tsx",
    "./sidebar": "./src/ui/sidebar.tsx",
    "./sonner": "./src/ui/sonner.tsx",
    "./table": "./src/ui/table.tsx",
    "./card-skeleton": "./src/card-skeleton.tsx",
    "./copy-button": "./src/copy-button.tsx",
    "./file-upload": "./src/file-upload.tsx",
    "./mode-toggle": "./src/mode-toggle.tsx",
    ".": "./src/index.tsx"
  },
  "scripts": {
    "update-ui": "pnpm dlx shadcn-ui@latest add $(ls src/ui/*.tsx | xargs -n1 basename | sed 's/.tsx$//' | tr '\n' ' ')",
    "add": "pnpm dlx shadcn-ui@latest add",
    "postadd": "pnpm run update-exports && pnpm run format",
    "update-exports": "node scripts/update-exports.js",
    "dev": "node --watch-path=./src ./scripts/update-exports.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@hexa/tailwind-config": "workspace:*",
    "@hexa/typescript-config": "workspace:*",
    "@storybook/addon-essentials": "^8.4.3",
    "@storybook/addon-interactions": "^8.4.3",
    "@storybook/addon-styling": "^1.3.7",
    "@storybook/addon-themes": "^8.4.3",
    "@storybook/nextjs": "^8.4.3",
    "@storybook/react": "^8.4.3",
    "@storybook/test": "^8.4.3",
    "@types/node": "22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "storybook": "^8.4.3",
    "tailwindcss": "^3.4.4",
    "typescript": "5.7.2"
  },
  "dependencies": {
    "@heroicons/react": "catalog:",
    "@hexa/const": "workspace:*",
    "@hexa/utils": "workspace:*",
    "@hookform/resolvers": "catalog:",
    "@nextui-org/react": "catalog:",
    "@radix-ui/react-icons": "catalog:",
    "@radix-ui/react-scroll-area": "catalog:",
    "@radix-ui/react-slot": "catalog:",
    "@tanstack/react-table": "catalog:",
    "class-variance-authority": "catalog:",
    "framer-motion": "catalog:",
    "geist": "catalog:",
    "lucide-react": "catalog:",
    "next": "catalog:",
    "next-themes": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-hook-form": "catalog:",
    "recharts": "catalog:",
    "sonner": "catalog:",
    "usehooks-ts": "catalog:",
    "zod": "catalog:"
  }
}
