RESEND_API_KEY=

# == Oauth ==
# Github
# https://github.com/settings/developers
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=
# Google
# https://console.cloud.google.com/apis/credentials
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=

# == Cloudflare Turnstile ==
# Your can use dummy sitekeys and secret keys for testing in .env.local
# https://developers.cloudflare.com/turnstile/troubleshooting/testing/
# Public Environment variables that can be used in the browser.
# Sitekey	                Description	    Visibility
# 1x00000000000000000000AA	Always passes	visible
# 2x00000000000000000000AB	Always blocks	visible
# 1x00000000000000000000BB	Always passes	invisible
# 2x00000000000000000000BB	Always blocks	invisible
# 3x00000000000000000000FF	Forces an interactive challenge	visible
# blank                     Disables Turnstile
NEXT_PUBLIC_CLOUDFLARE_TURNSTILE_SITE_KEY=1x00000000000000000000AA
# Secretkey	                            Description
# 1x0000000000000000000000000000000AA	Always passes
# 2x0000000000000000000000000000000AA	Always fails
# 3x0000000000000000000000000000000AA	Yields a “token already spent” error
CF_TURNSTILE_SECRET_KEY=1x0000000000000000000000000000000AA



# == R2 Storage Configuration ==
# The S3-compatible API endpoint for R2 bucket operations
# Format: https://<account_id>.r2.cloudflarestorage.com/<bucket_name>
# https://dash.cloudflare.com/sign-up?to=/:account/r2/overview
NEXT_PUBLIC_STORAGE_ENDPOINT=
# The public CDN URL for accessing stored files
# This is your custom domain or Cloudflare public URL for the R2 bucket
NEXT_PUBLIC_STORAGE_BASE_URL=

# == R2 Authentication ==
# R2 API token access key
# Generate from: https://dash.cloudflare.com/sign-up?to=/:account/r2/api-tokens
# Required permissions: Edit access to targeted bucket
STORAGE_ACCESS_KEY_ID=
# R2 API token secret key
# Generated together with access key, used for authenticating R2 API requests
STORAGE_SECRET_ACCESS_KEY=

# == Stripe ==
# https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
# https://stripe.com/docs/webhooks#verify-events
STRIPE_WEBHOOK_SECRET=
