{
  "name": "@hexa/app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "check-types": "tsc --noEmit",
    "dev": "next dev -p 7002",
    "build": "next build",
    "start": "next start",
    "build:worker": "cloudflare",
    "dev:worker": "wrangler dev --port 7002",
    "preview:worker": "npm run dev:worker",
    "deploy:worker": "wrangler deploy",
    "deploy:worker:staging": "wrangler deploy --env staging",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv env.d.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply hexa --local",
    "db:migrate:prod": "wrangler d1 migrations apply hexa --remote",
    "db:migrate:staging": "wrangler d1 migrations apply hexa --remote --env staging",
    "db:studio:local": "DB_LOCAL_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio",
    "db:studio:prod": "NODE_ENV=production drizzle-kit studio --port 3456",
    "db:drop:local": "wrangler d1 drop hexa --local",
    "db:drop:prod": "wrangler d1 drop hexa --remote",
    "db:drop:staging": "wrangler d1 drop hexa --remote --env staging"
  },
  "dependencies": {
    "@ebay/nice-modal-react": "1.2.13",
    "@hexa/email-templates": "workspace:*",
    "@hexa/tailwind-config": "workspace:*",
    "@hexa/ui": "workspace:*",
    "@hexa/utils": "workspace:*",
    "@hono/zod-validator": "0.4.1",
    "@hookform/resolvers": "3.6.0",
    "@lucia-auth/adapter-drizzle": "1.0.7",
    "@lucia-auth/adapter-sqlite": "3.0.2",
    "@marsidev/react-turnstile": "0.7.1",
    "@tanstack/react-query": "5.50.1",
    "@tanstack/react-query-next-experimental": "5.50.1",
    "@tanstack/react-table": "8.20.5",
    "@vercel/analytics": "1.3.1",
    "@vercel/functions": "1.0.2",
    "@vercel/speed-insights": "1.0.12",
    "arctic": "1.9.1",
    "aws4fetch": "1.0.18",
    "better-sqlite3": "11.5.0",
    "date-fns": "3.6.0",
    "drizzle-orm": "0.36.4",
    "drizzle-zod": "0.5.1",
    "hono": "4.6.9",
    "lodash": "4.17.21",
    "lucia": "3.2.0",
    "motion": "^11.11.17",
    "next": "14.1.4",
    "next-themes": "0.3.0",
    "oslo": "1.2.0",
    "random-word-slugs": "0.1.7",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "7.53.2",
    "resend": "3.3.0",
    "usehooks-ts": "3.1.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@hexa/typescript-config": "workspace:*",
    "@opennextjs/cloudflare": "^0.2.1",
    "@tanstack/react-query-devtools": "^5.50.1",
    "@types/lodash": "^4.17.5",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.19",
    "dotenv": "^16.4.5",
    "drizzle-kit": "0.28.1",
    "postcss": "^8.4.38",
    "postcss-import": "^16.1.0",
    "tailwindcss": "^3.4.4",
    "type-fest": "^4.27.0",
    "typescript": "5.7.2",
    "ui": "0.2.4",
    "wrangler": "^3.84.1",
    "www": "0.0.0"
  }
}
