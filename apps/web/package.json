    "@vercel/speed-insights": "^1.0.12",
    "arctic": "^1.9.1",
    "aws4fetch": "^1.0.18",
    "better-sqlite3": "^11.5.0",
    "date-fns": "^3.6.0",
    "drizzle-orm": "^0.31.2",
    "hono": "^4.6.9",
    "lodash": "^4.17.21",
    "lucia": "^3.2.0",
    "next": "15.0.0-rc.0",
